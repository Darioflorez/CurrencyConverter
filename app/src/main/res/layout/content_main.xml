<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/master_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/master_editText" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slave_spinner"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/master_spinner"
        android:layout_toEndOf="@+id/slave_editText" />

    <EditText
        android:id="@+id/master_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignBottom="@+id/master_spinner"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/slave_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_alignBottom="@+id/slave_spinner"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button"
        android:text="Convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/slave_spinner"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:allowUndo="false"
        android:background="@color/button_material_light"
        android:theme="@android:style/Widget.Button.Inset" />

</RelativeLayout>
